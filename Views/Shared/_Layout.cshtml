@using Microsoft.AspNetCore.Identity
@using BookHive.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookHive</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <!-- Left: Brand -->
            <a class="navbar-brand me-3" href="/">BookHive</a>

            <!-- Center: Search -->
            <form class="d-flex mx-auto w-50" role="search" method="get" action="/Books/Search">
                <input class="form-control me-2" type="search" name="query" placeholder="Search books..." aria-label="Search">
                <button class="btn btn-outline-light" type="submit">Search</button>
            </form>

            <!-- Right: Actions -->
            <div class="d-flex align-items-center gap-2">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    @* Admin Controls *@
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-warning" href="/Product/Index">Product Management</a>
                        <a class="btn btn-outline-info" href="/Admin/Users">User Management</a>
                        <a class="btn btn-outline-info" href="/Admin/Orders">Order Management</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-light position-relative" href="/Cart">Cart</a>
                        <a class="btn btn-outline-light" href="/Order/History">Order History</a>
                    }

                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-light">Logout</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-outline-light" href="/Account/Login">Login</a>
                    <a class="btn btn-outline-light" href="/Account/SignUp">SignUp</a>
                }
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>