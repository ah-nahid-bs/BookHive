@model BookHive.ViewModels.BookViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-5">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Title" />
        </div>
        <div class="col-md-7">
            <h2>@Model.Title</h2>
            <p class="text-muted">by @Model.Author</p>
            <p><strong>Category:</strong> @Model.CategoryName</p>
            <p><strong>Published:</strong> @Model.PublishDate.ToString("yyyy-MM-dd")</p>
            <p>demo description</p>
            <h4 class="text-success">â‚¹@Model.Price</h4>

            <div class="mt-4 d-flex align-items-center gap-3">
                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-flex align-items-center gap-2">
                    <input type="hidden" name="bookId" value="@Model.Id" />
                    <input type="number" name="quantity" value="1" min="1" class="form-control w-auto" />
                    <button type="submit" class="btn btn-outline-primary">Add to Cart</button>
                </form>
            </div>
        </div>
    </div>
</div>
