@model BookHive.ViewModels.BookViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-5">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Title" />
        </div>
        <div class="col-md-7">
            <h2>@Model.Title</h2>
            <p class="text-muted">by @Model.Author</p>
            <p><strong>Category:</strong> @Model.CategoryName</p>
            <p><strong>Published:</strong> @Model.PublishDate.ToString("yyyy-MM-dd")</p>
            <p>demo description</p>
            <h4 class="text-success">â‚¹@Model.Price</h4>

            <div class="mt-4">
                <button class="btn btn-outline-primary me-2">Add to Cart</button>
                <button class="btn btn-success">Order Now</button>
            </div>
        </div>
    </div>
</div>
