@model BookHive.ViewModels.OrderViewModel

@{
    ViewData["Title"] = $"Order #{Model.Id} Details";
}

<div class="container py-4">
    <h2 class="mb-4">Order #@Model.Id Details</h2>

    <div class="card mb-4">
        <div class="card-body">
            <p><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd")</p>
            <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
        </div>
    </div>

    <h4>Items</h4>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Book</th>
                <th>Image</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Title</td>
                    <td><img src="@item.ImageUrl" alt="Image" width="60" /></td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@item.Total.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="History" class="btn btn-secondary">Back to History</a>
</div>