@model IEnumerable<BookHive.Models.CartItem>

<h2>Your Cart</h2>
<table class="table">
    <tr>
        <th>Book</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Action</th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>@item.Book?.Title</td>
        <td>@item.Quantity</td>
        <td>$@(item.Quantity * item.Book!.Price)</td>
        <td><a class="btn btn-danger" href="/Cart/Remove/@item.Id">Remove</a></td>
    </tr>
}
</table>
<a class="btn btn-primary" href="/Order/Confirm">Place Order</a>
