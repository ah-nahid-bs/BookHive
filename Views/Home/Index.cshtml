@{
    ViewData["Title"] = "Home";
    var categories = ViewBag.Categories as IEnumerable<string>; 
    var featuredItems = ViewBag.FeaturedItems;
    var discountedBooks = ViewBag.DiscountedBooks;
    var trendingBooks = ViewBag.TrendingBooks;
    var bestSellers = ViewBag.BestSellers;
    var newArrivals = ViewBag.NewArrivals;
}

<div class="container mt-4">
    <!-- Category Navigation -->
    <div class="d-flex flex-wrap justify-content-center mb-4">
        @if (categories != null)
        {
            foreach (var category in categories)
            {
                <a class="btn btn-outline-primary m-2" asp-controller="Books" asp-action="Category" asp-route-categoryName="@category">@category</a>

            }
        }
    </div>

    <!-- Featured Items -->
    <section class="mb-5">
        <h2 class="mb-3">üìö Featured Items</h2>
        <div class="row">
            @if (featuredItems != null)
            {
                foreach (var book in featuredItems)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card h-100 shadow-sm">
                            <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" style="height: 250px; object-fit: cover;" />
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@book.Title</h5>
                                <p class="card-text mb-1 text-muted">by @book.Author</p>
                                <p class="card-text fw-bold text-success">‚Çπ@book.Price</p>
                                <a href="/Books/Details/@book.Id" class="btn btn-primary mt-auto">View Details</a>
                            </div>
                        </div>
                    </div>

                }
            }
        </div>
    </section>

    <!-- Discounted Products -->
    <section class="mb-5">
        <h2 class="mb-3 text-danger">üî• Discounted Books</h2>
        <div class="row">
            @if (discountedBooks!= null)
            {
                foreach (var book in discountedBooks)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card h-100">
                            <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" style="height: 250px; object-fit: cover;" />
                            <div class="card-body">
                                <h5 class="card-title">@book.Title</h5>
                                <p class="card-text">@book.Author</p>
                                <p class="card-text">
                                    <span class="text-muted text-decoration-line-through me-2">$@book.OriginalPrice</span>
                                    <span class="fw-bold text-success">$@book.DiscountedPrice</span>
                                </p>
                                <a href="/Books/Details/@book.Id" class="btn btn-sm btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </section>

    <!-- Trending Books This Month -->
    <section class="mb-5">
        <h2 class="mb-3">üìà Trending This Month</h2>
        <div class="row">
            @if (trendingBooks != null)
            {
                foreach (var book in trendingBooks)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card h-100">
                            <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" style="height: 250px; object-fit: cover;" />
                            <div class="card-body">
                                <h5 class="card-title">@book.Title</h5>
                                <p class="card-text">@book.Author</p>
                                <a href="/Books/Details/@book.Id" class="btn btn-sm btn-info">Check it out</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </section>

    <!-- Best Seller Books -->
    <section class="mb-5">
        <h2 class="mb-3">üèÜ Best Sellers</h2>
        <div class="row">
            @if (bestSellers != null)
            {
                foreach (var book in bestSellers)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card h-100 border-success">
                            <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" style="height: 250px; object-fit: cover;" />
                            <div class="card-body">
                                <h5 class="card-title">@book.Title</h5>
                                <p class="card-text">@book.Author</p>
                                <a href="/Books/Details/@book.Id" class="btn btn-sm btn-success">Top Pick</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </section>

    <!-- New Arrivals -->
    <section class="mb-5">
        <h2 class="mb-3">üÜï New Arrivals</h2>
        <div class="row">
            @if (newArrivals != null)
            {
                foreach (var book in newArrivals)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card h-100">
                            <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" style="height: 250px; object-fit: cover;" />
                            <div class="card-body">
                                <h5 class="card-title">@book.Title</h5>
                                <p class="card-text">@book.Author</p>
                                <a href="/Books/Details/@book.Id" class="btn btn-sm btn-primary">Explore</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </section>
</div>
